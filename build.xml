<project default="compile">

    <!--  with the classpath for all compilation & execution targets. -->
    <property name="classpath" value="classFiles" />

    <!-- Compile all java files under `src`, and export .class files into `classFiles` -->
    <target name="compile">
        <mkdir dir="classFiles"/>
        <javac classpath="${classpath}" srcdir="src" destdir="classFiles" includeantruntime="false"/>
    </target>

    <target name="clean">
        <delete dir="classFiles"/>
    </target>

    <target name="run" depends="compile" >
        <java classname="CheckersGameMain" classpath="${classpath}" fork="true">
            <!-- This specifies to pass the arguments from the `ant` command into the `java` execution command -->
            <arg line="${args}"/>
        </java>
    </target>



</project>
